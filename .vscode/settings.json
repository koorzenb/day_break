{
  // Excludes files/folders from the File Explorer view.
  // This is great for hiding generated files you never need to see.
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.dart_tool/": true,
    "**/.idea/": true,
    "**/.metadata": true,
    "**/build/": true,
    "**/*.g.dart": false, // Keep generated files visible if you want
    "**/*.freezed.dart": false,
    "pubspec.lock": true,
    "linux/": true, // Exclude entire platform folders you don't work on
    "windows/": true,
    "macos/": true,
    "web/": true
  },
  // Excludes files/folders from VS Code's search results.
  // This is the most important one for performance.
  "search.exclude": {
    "**/build/": true,
    "**/.dart_tool/": true,
    "**/*.lock": true,
    "**/ios/Pods/": true,
    "**/ios/Flutter/App.framework": true,
    "**/android/app/build/": true,
    "**/linux/": true,
    "**/windows/": true,
    "**/macos/": true,
    "**/web/": true
  },
  // Excludes files/folders from VS Code's file watcher service.
  // Reducing the number of watched files saves system resources.
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    "**/build/**": true,
    "**/.dart_tool/**": true,
    "**/ios/Pods/**": true,
    "**/android/app/build/**": true
  }
}